@{
    ViewData["Title"] = "Welcome to Musico Store!";
    int[] productIds = new int[] { 3, 5 };
}

<div class="text-center">
    <h1 class="display-4">Welcome to Musico Store!</h1>
    <p class="lead">Your one-stop shop for music-related products!</p>
    <p>Explore our wide range of products including microphones, DVDs, instruments, and more.</p>
    <p>Sign up now to get the latest updates on new arrivals, exclusive discounts, and more!</p>

    <div class="mt-4">
        <a class="btn btn-primary btn-lg" role="button">Start Shopping</a>
    </div>

    <div class="mt-5">
        <h2>Why Musico Store?</h2>
        <ul class="list-group">
            <li class="list-group-item">🎤 High-quality microphones for all your recording needs</li>
            <li class="list-group-item">🎸 Instruments to suit beginners and professionals</li>
            <li class="list-group-item">🎥 DVDs of music concerts and documentaries</li>
            <li class="list-group-item">🎵 Easy navigation and detailed product categories</li>
        </ul>
    </div>

    <div class="mt-5">
        <h3>Product Images</h3>

        <div class="row">
            <div class="col-md-6">
                <h4>Product 3</h4>
                <img id="productImage3" src="" alt="Product 3 Image" class="img-fluid" style="max-width: 300px;" />
            </div>

            <div class="col-md-6">
                <h4>Product 5</h4>
                <img id="productImage5" src="" alt="Product 5 Image" class="img-fluid" style="max-width: 300px;" />
            </div>
        </div>
    </div>
</div>

<script>
    // Fetch image for Product 3
    fetch(`http://localhost:5201/api/images/3/file`, {
        headers: {
            'Authorization': 'Bearer YourHardcodedToken',
            'Origin': 'https://localhost:7256'
        }
    })
        .then(response => {
            if (response.ok) {
                return response.blob();
            } else {
                console.error(`Image for Product 3 not found. Status: ${response.status}`);
            }
        })
        .then(blob => {
            if (blob) {
                const imageUrl = URL.createObjectURL(blob);
                document.getElementById('productImage3').src = imageUrl;
            }
        })
        .catch(error => {
            console.error('Error fetching image for Product 3:', error);
        });

    // Fetch and display image for Product 5
    fetch(`http://localhost:5201/api/images/5/file`, {
        headers: {
            'Authorization': 'Bearer YourHardcodedToken',
            'Origin': 'https://localhost:7256'
        }
    })
        .then(response => {
            if (response.ok) {
                return response.blob();
            } else {
                console.error(`Image for Product 5 not found. Status: ${response.status}`);
            }
        })
        .then(blob => {
            if (blob) {
                const imageUrl = URL.createObjectURL(blob);
                document.getElementById('productImage5').src = imageUrl;
            }
        })
        .catch(error => {
            console.error('Error fetching image for Product 5:', error);
        });
</script>