@model IEnumerable<OrderViewModel>

<h1>Your Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Order Status</th>
            <th>Items</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                <td>@order.OrderStatusStr</td>
                <td>
                    <ul>
                        @foreach (var item in order.OrderItems)
                        {
                            <li>
                                <div>
                                    @Html.Partial("~/Views/Product/ProductDetails.cshtml", item.Product)
                                </div>
                                <p>Quantity: @item.Quantity</p>
                                <p>Price: @item.Price</p>
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>