@using DataAccessLayer.Models;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<LocalIdentityUser> SignInManager
@inject UserManager<LocalIdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Musico Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Musico Store</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>

                        @{await Html.RenderPartialAsync("_SearchBox", new WebMVC.Models.Shared.SearchViewModel());}
                    </ul>

                    <!-- User-specific menu handled by UserMenuViewComponent + Shoppping Cart -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="shopping-cart-button d-flex align-items-center justify-content-center px-3 py-2 rounded text-white"
                               asp-area="" asp-controller="ShoppingCart" asp-action="Cart">
                                <i class="bi bi-cart-fill" style="font-size: 1.25rem;"></i>
                                <span class="cart-text" style="margin-left: -0.05rem;">Cart</span>
                            </a>
                        </li>

                        @await Component.InvokeAsync("UserMenu")
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Musico Store - Your one-stop shop for all music-related products.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Inline CSS -->
    <style>
        /* Shopping Cart Button */
        .shopping-cart-button {
            background-color: #007bff; /* Button background color */
            color: white; /* Ensure text and icon are visible */
            font-size: 1rem; /* Text font size */
            font-weight: 500; /* Slightly bold text for emphasis */
            text-decoration: none; /* Remove underline */
            display: flex; /* Flexbox for alignment */
            align-items: center; /* Vertically align icon and text */
            justify-content: center; /* Horizontally align icon and text */
            border: none; /* No border for a clean look */
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth hover effect */
            padding: 0.5rem 1rem; /* Adjust padding for a proportional button */
        }

        /* Icon in the button */
        .shopping-cart-button i {
            font-size: 1.25rem; /* Slightly larger icon size */
            color: white; /* Icon color matches text */
        }

        /* Manually adjust text position */
        .cart-text {
            margin-left: -0.05rem; /* Push the text slightly to the left */
        }

        /* Hover Effect */
        .shopping-cart-button:hover {
            background-color: #0056b3; /* Slightly darker blue on hover */
            color: white; /* Ensure text and icon remain
    </style>
</body>
</html>
