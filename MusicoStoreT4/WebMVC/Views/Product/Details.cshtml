@model WebMVC.Models.Product.ProductDetailViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Product Details</h1>

    <div class="card shadow-sm">
        <div class="row g-0">
            <!-- Image Section -->
            <div class="col-md-4">
                <div class="image-container p-3 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageFilePath))
                    {
                        <img src="@Url.Action("GetImage", "Image", new { productId = Model.Id })"
                             alt="@Model.Name"
                             class="product-image img-fluid rounded" />
                    }
                    else
                    {
                        <div class="no-image-message d-flex justify-content-center align-items-center text-muted">
                            <p>No image available for this product.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Details Section -->
            <div class="col-md-8">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-3">Quantity in Stock</dt>
                        <dd class="col-sm-9">@Model.QuantityInStock</dd>

                        <dt class="col-sm-3">Primary Category</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.PrimaryCategory.Name</strong>
                        </dd>

                        <dt class="col-sm-3">Manufacturer</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.Manufacturer.Name</strong>
                        </dd>
                    </dl>

                    <!-- Add to Cart Button -->
                    <div class="d-flex align-items-center mt-3">
                        <input type="number" id="quantity-@Model.Id" value="1" min="1" class="form-control form-control-sm me-2" style="width: 80px;" />
                        <button class="btn btn-primary btn-sm" onclick="addToCart(@Model.Id, '@Model.Name', @Model.Price)">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4 text-center">
        <!-- Back to Search Results Button -->
        <a class="btn btn-info" onclick="history.back()">Back to Search Results</a>
    </div>
</div>

<script>
    function addToCart(productId, productName, price) {
        const quantity = document.getElementById(`quantity-${productId}`).value;

        $.ajax({
            url: '/ShoppingCart/AddToCart',
            type: 'POST',
            data: {
                productId: productId,
                productName: productName,
                price: price,
                quantity: quantity
            },
            success: function (response) {
                if (response.success) {
                    alert(`Added to cart! Total: $${response.cartTotal}`);
                } else {
                    alert('Failed to add to cart.');
                }
            },
            error: function () {
                alert('An error occurred while adding to the cart.');
            }
        });
    }
</script>

<style>
    .image-container {
        border-right: 1px solid #ddd;
        background-color: #f8f9fa;
        height: 100%;
    }

    .product-image {
        max-width: 100%;
        max-height: 300px;
        object-fit: cover;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    .no-image-message {
        width: 100%;
        height: 300px;
        border: 1px dashed #ccc;
        border-radius: 8px;
        background-color: #e9ecef;
        font-size: 1.2rem;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 12px;
    }

    .card-body {
        padding: 20px;
    }

    dl.row dt {
        font-weight: bold;
        color: #495057;
    }

    dl.row dd {
        margin-bottom: 10px;
    }
</style>
