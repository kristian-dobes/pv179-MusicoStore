@model WebMVC.Models.Product.ProductDetailViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div class="card">
    <div class="card-header">
        <h2>@Model.Name</h2>
    </div>
    <div class="card-body">
        <div class="image-container">
            @if (!string.IsNullOrEmpty(Model.ImageFilePath))
            {
                <div class="text-center mb-3">
                    @* <img src="@Model.ImageFilePath" alt="Image of @Model.Name" class="img-fluid" style="max-height: 300px;" /> *@
                    <img src="@Url.Action("GetImage", "Image", new { productId = Model.Id })" alt="@Model.Name" class="product-image" />
                </div>
            }
            else
            {
                <div class="text-center mb-3">
                    <p class="text-muted">No image available for this product.</p>
                </div>
            }
        </div>

        <dl class="row">
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Quantity in Stock</dt>
            <dd class="col-sm-9">@Model.QuantityInStock</dd>

            <dt class="col-sm-3">Primary Category</dt>
            <dd class="col-sm-9">
                <strong>@Model.PrimaryCategory.Name</strong>
            </dd>

            <dt class="col-sm-3">Manufacturer</dt>
            <dd class="col-sm-9">
                <strong>@Model.Manufacturer.Name</strong>
            </dd>
        </dl>
    </div>
</div>

<style>
    /* Container for the entire card */
    .card {
        max-width: 800px;
        margin: 20px auto;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        padding: 15px;
        text-align: center;
    }

        .card-header h2 {
            margin: 0;
            font-size: 1.75rem;
        }

    .card-body {
        padding: 20px;
        font-family: 'Arial', sans-serif;
    }

    /* Styling the image container */
    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
        width: 100%;
        max-height: 300px;
        overflow: hidden;
        margin-bottom: 20px;
    }

        .image-container img {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
            border-radius: 10px;
        }

        .image-container .text-muted {
            font-size: 1rem;
            color: #666;
            padding: 20px;
            text-align: center;
        }

    dl.row {
        margin: 0;
    }

    dt {
        font-weight: bold;
        color: #555;
    }

    dd {
        margin-left: 0;
        margin-bottom: 15px;
    }

    /* Add spacing between sections */
    .row + .row {
        margin-top: 20px;
    }

    /* Price styling */
    dd.price {
        font-size: 1.5rem;
        font-weight: bold;
        color: #28a745;
    }

    /* Manufacturer section */
    .manufacturer {
        font-style: italic;
        color: #007bff;
    }
</style>
