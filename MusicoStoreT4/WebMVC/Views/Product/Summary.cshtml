@model WebMVC.Models.Product.ProductSummaryViewModel

<div class="product-summary text-light">
    <h4>@Model.Name</h4>
    <p>
        <strong>Product ID:</strong> @Model.Id <br />
        <strong>Category ID:</strong> @Model.CategoryId <br />
        <strong>Manufacturer ID:</strong> @Model.ManufacturerId
    </p>
    
    @* <a href="/Products/Detail/@Model.Id" class="btn btn-primary">View Details</a> *@
    <a asp-controller="Product" asp-action="Detail" asp-route-id="@Model.Id">
        <button class="btn btn-primary">View Product Detail</button>
    </a>
</div>
