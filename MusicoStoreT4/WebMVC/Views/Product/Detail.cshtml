@using WebMVC.Models.Product;
@model ProductDetailViewModel

<div class="container mt-5">
    <h1 class="text-center">Product Details</h1>

    <div class="card mt-4">
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <p class="card-text">
                <strong>ProductId:</strong> @Model.Id
            </p>
            <p class="card-text">
                <strong>Description:</strong> @Model.Description
            </p>
            <p class="card-text">
                <strong>Price:</strong> @Model.Price.ToString("C")
            </p>
            <p class="card-text">
                <strong>Quantity in Stock:</strong> @Model.QuantityInStock
            </p>
            <p class="card-text">
                <strong>Category:</strong> @Model.Category.Name
            </p>
            <p class="card-text">
                <strong>Manufacturer:</strong> @Model.Manufacturer.Name
            </p>
            <p class="card-text">
                <strong>Last Modified By ID:</strong> @Model.LastModifiedById
            </p>
            <p class="card-text">
                <strong>Edit Count:</strong> @Model.EditCount
            </p>
        </div>
    </div>

    <div class="mt-4">
        <a href="/Products/Edit/@Model.Id" class="btn btn-primary">Edit Product</a>
        
        @* <a asp-controller="Product" asp-action="Update" asp-route-id="@Model.Id">
            <button class="btn btn-primary">Edit product</button>
        </a> *@

        @* <a href="/Products" class="btn btn-secondary">Back to Products</a> *@
        <a asp-controller="Product" asp-action="List">
            <button class="btn btn-primary">Back to Products</button>
        </a>
    </div>
</div>