@model IEnumerable<WebMVC.Models.Order.OrderDetailViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h1 class="mb-4">Orders</h1>
            <p class="text-muted">Total Orders: <strong>@Model.Count()</strong></p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col d-flex gap-2">
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>OrderID</th>
                <th>@Html.DisplayNameFor(model => model.Created)</th>
                <th>User Email</th>
                <th>@Html.DisplayNameFor(model => model.OrderItemsCount)</th>
                <th>@Html.DisplayNameFor(model => model.TotalOrderPrice)</th>
                <th>@Html.DisplayNameFor(model => model.PaymentStatus)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Created)</td>
                    <td>@item.User?.Email</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderItemsCount)</td>
                    <td>@item.TotalOrderPrice.ToString("C")</td>
                    <td>@Html.DisplayFor(modelItem => item.PaymentStatus)</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
