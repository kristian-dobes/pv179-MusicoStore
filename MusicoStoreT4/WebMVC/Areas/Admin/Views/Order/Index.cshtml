@model IEnumerable<WebMVC.Models.Order.OrderDetailViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders:</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>OrderID</th>
            <th>@Html.DisplayNameFor(model => model.Created)</th>
            <th>User Email</th>
            <th>@Html.DisplayNameFor(model => model.OrderItemsCount)</th>
            <th>@Html.DisplayNameFor(model => model.TotalOrderPrice)</th>
            <th>@Html.DisplayNameFor(model => model.OrderStatus)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                <td>@Html.DisplayFor(modelItem => item.Created)</td>
                <td>@item.User?.Email</td>
                <td>@Html.DisplayFor(modelItem => item.OrderItemsCount)</td>
                <td>@item.TotalOrderPrice.ToString("C")</td>
                <td>@Html.DisplayFor(modelItem => item.OrderStatus)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
