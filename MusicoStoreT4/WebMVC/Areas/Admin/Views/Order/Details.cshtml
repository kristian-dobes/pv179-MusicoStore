@model WebMVC.Models.Order.OrderDetailViewModel

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Order:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.OrderId
        </dd>
        <dt class="col-sm-2">
            Created Date
        </dt>
        <dd class="col-sm-10">
            @Model.Created
        </dd>
        <dt class="col-sm-2">
            Total Items
        </dt>
        <dd class="col-sm-10">
            @Model.OrderItemsCount
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Model.TotalOrderPrice.ToString("C")
        </dd>
        <dt class="col-sm-2">
            Payment Status
        </dt>
        <dd class="col-sm-10">
            @Model.PaymentStatus
        </dd>
        <dt class="col-sm-2">
            Used Coupon Code
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrWhiteSpace(Model.UsedCouponCode))
            {
                @Model.UsedCouponCode
            }
            else
            {
                <span class="text-muted">No coupon used</span>
            }
        </dd>
        <dt class="col-sm-2">
            Discount Amount
        </dt>
        <dd class="col-sm-10">
            @if (Model.GiftCard != null)
            {
                @Model.GiftCard.DiscountAmount.ToString("C")
            }
            else
            {
                <span class="text-muted">No discount applied</span>
            }
        </dd>
    </dl>
</div>

<div>
    <h4>Customer Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Username
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.User?.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.User?.Address
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Model.User?.City
        </dd>
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            @Model.User?.State
        </dd>
        <dt class="col-sm-2">
            Postal Code
        </dt>
        <dd class="col-sm-10">
            @Model.User?.PostalCode
        </dd>
    </dl>
</div>

<div>
    <h4>Order Items</h4>
    <hr />
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Manufacturer</th>
                <th>Product Price</th>
                <th>Quantity</th>
                <th>Total per Item</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.ProductDescription</td>
                    <td>@item.CategoryName</td>
                    <td>@item.ManufacturerName</td>
                    <td>@item.ProductPrice.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPricePerOrderItem.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-area="Admin" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-primary">Edit</a>
    <a asp-area="Admin" asp-action="Delete" asp-route-id="@Model.OrderId" class="btn btn-danger">Delete</a>
    <a asp-area="Admin" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
