@model WebMVC.Models.Product.ProductDetailViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Product Details</h1>

    <div class="card">
        <div class="card-header">
            <h4>Product Information:</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.QuantityInStock)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.QuantityInStock)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LastModifiedById)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LastModifiedById)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EditCount)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EditCount)</dd>

                <dt class="col-sm-3">Primary Category</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PrimaryCategory.Name)</dd>

                <dt class="col-sm-3">Secondary Categories</dt>
                <dd class="col-sm-9">
                    @if (Model.SecondaryCategories != null && Model.SecondaryCategories.Any())
                    {
                        <ul>
                            @foreach (var category in Model.SecondaryCategories)
                            {
                                <li>@category.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>0</p>
                    }
                </dd>

                <dt class="col-sm-3">Manufacturer</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Manufacturer.Name)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
