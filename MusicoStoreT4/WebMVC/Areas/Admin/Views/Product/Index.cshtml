@model IEnumerable<WebMVC.Models.Product.ProductDetailViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h1 class="mb-4">Products</h1>
            <p class="text-muted">Total Products: <strong>@Model.Count()</strong></p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col d-flex gap-2">
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ProductID</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.QuantityInStock)</th>
                <th>@Html.DisplayNameFor(model => model.LastModifiedById)</th>
                <th>@Html.DisplayNameFor(model => model.EditCount)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Manufacturer)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        @item.Description.Substring(0, Math.Min(50, item.Description.Length))
                        @(item.Description.Length > 50 ? "..." : "")
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuantityInStock)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastModifiedById)</td>
                    <td>@Html.DisplayFor(modelItem => item.EditCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Manufacturer.Name)</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
