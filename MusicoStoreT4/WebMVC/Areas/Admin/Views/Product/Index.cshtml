@model IEnumerable<WebMVC.Models.Product.ProductDetailViewModel>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Products</h1>
        <p class="text-muted mb-0">Total Products: <strong>@Model.Count()</strong></p>
    </div>

    <div class="text-end mb-3">
        <a class="btn btn-primary btn-sm" asp-area="Admin" asp-action="Create">+ Create New Product</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    @* <th scope="col">Description</th> *@
                    <th scope="col">Price</th>
                    <th scope="col">In Stock</th>
                    <th scope="col">Last Modified By ID</th>
                    <th scope="col">Edit count</th>
                    <th scope="col">Primary Category</th>
                    <th scope="col">Manufacturer</th>
                    <th scope="col">Secondary Categories</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        @* <td>@item.Description</td> *@
                        <td>$@item.Price.ToString("F2")</td>
                        <td>@item.QuantityInStock</td>
                        <td>@item.LastModifiedById</td>
                        <td>@item.EditCount</td>
                        <td>@item.PrimaryCategory.Name</td>
                        <td>@item.Manufacturer.Name</td>
                        <td>@item.NumberOfSecondaryCategories</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-info text-white" asp-area="Admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-sm btn-secondary" asp-area="Admin" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-sm btn-danger" asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table {
        font-size: 0.9rem;
        vertical-align: middle;
    }

        .table thead {
            font-size: 1rem;
        }

    .btn-group .btn {
        margin-right: 4px;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }

    .table td, .table th {
        vertical-align: middle;
    }

    .text-muted {
        font-size: 0.9rem;
    }
</style>
