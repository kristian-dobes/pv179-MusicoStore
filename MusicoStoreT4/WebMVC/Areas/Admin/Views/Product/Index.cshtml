@model IEnumerable<WebMVC.Models.Product.ProductDetailViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h1 class="mb-4">Products</h1>
            <p class="text-muted">Total Products: <strong>@Model.Count()</strong></p>
        </div>
    </div>

    <p>
        <a asp-area="Admin" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ProductID
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    In Stock
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastModifiedById)
                </th>
                <th>
                    Edited
                </th>
                <th>
                    Primary Category
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer)
                </th>
                <th>
                    Secondary Categories
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantityInStock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastModifiedById)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EditCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimaryCategory.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfSecondaryCategories)
                    </td>
                    <td>
                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-area="Admin" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
