@model IEnumerable<WebMVC.Models.Manufacturer.ManufacturerSummaryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Products:</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCount)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufacturerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ManufacturerId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ManufacturerId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ManufacturerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
