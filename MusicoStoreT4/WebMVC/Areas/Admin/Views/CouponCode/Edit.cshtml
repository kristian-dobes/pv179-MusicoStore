@model WebMVC.Models.GiftCard.GiftCardViewModel

@{
    ViewData["Title"] = "Edit Gift Card";
}

<h1>Edit Gift Card</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden field for GiftCardId -->
            <input asp-for="GiftCardId" type="hidden" />

            <div class="form-group">
                <label asp-for="DiscountAmount" class="control-label"></label>
                <input asp-for="DiscountAmount" class="form-control" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValidityStartDate" class="control-label"></label>
                <input asp-for="ValidityStartDate" class="form-control" type="date" />
                <span asp-validation-for="ValidityStartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValidityEndDate" class="control-label"></label>
                <input asp-for="ValidityEndDate" class="form-control" type="date" />
                <span asp-validation-for="ValidityEndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}