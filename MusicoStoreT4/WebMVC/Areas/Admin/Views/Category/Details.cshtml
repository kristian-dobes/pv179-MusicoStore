@model WebMVC.Models.Category.CategoryProductsViewModel

@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>

<div>
    <h4>Category:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimaryProductCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimaryProductCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecondaryProductCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecondaryProductCount)
        </dd>
    </dl>
</div>

<div>
    <h4>Primary Products:</h4>
    @if (Model.PrimaryProducts != null && Model.PrimaryProducts.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PrimaryProducts.First().ProductId)</th>
                    <th>@Html.DisplayNameFor(model => model.PrimaryProducts.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.PrimaryProducts.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.PrimaryProducts.First().Price)</th>
                    <th>@Html.DisplayNameFor(model => model.PrimaryProducts.First().QuantityInStock)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.PrimaryProducts)
                {
                    <tr>
                        <td>@Html.DisplayFor(_ => product.ProductId)</td>
                        <td>@Html.DisplayFor(_ => product.Name)</td>
                        <td>@Html.DisplayFor(_ => product.Description)</td>
                        <td>@string.Format("{0:C}", product.Price)</td> <!-- Format price as dollars -->
                        <td>@Html.DisplayFor(_ => product.QuantityInStock)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No primary products available for this category.</p>
    }
</div>

<div>
    <h4>Secondary Products:</h4>
    @if (Model.SecondaryProducts != null && Model.SecondaryProducts.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SecondaryProducts.First().ProductId)</th>
                    <th>@Html.DisplayNameFor(model => model.SecondaryProducts.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.SecondaryProducts.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.SecondaryProducts.First().Price)</th>
                    <th>@Html.DisplayNameFor(model => model.SecondaryProducts.First().QuantityInStock)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.SecondaryProducts)
                {
                    <tr>
                        <td>@Html.DisplayFor(_ => product.ProductId)</td>
                        <td>@Html.DisplayFor(_ => product.Name)</td>
                        <td>@Html.DisplayFor(_ => product.Description)</td>
                        <td>@string.Format("{0:C}", product.Price)</td> <!-- Format price as dollars -->
                        <td>@Html.DisplayFor(_ => product.QuantityInStock)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No secondary products available for this category.</p>
    }
</div>

<div>
    <a asp-area="Admin" asp-action="Edit" asp-route-id="@Model?.CategoryId">Edit</a> |
    <a asp-area="Admin" asp-action="Delete" asp-route-id="@Model?.CategoryId">Delete</a> |
    <a asp-area="Admin" asp-action="Index">Back to List</a>
</div>
