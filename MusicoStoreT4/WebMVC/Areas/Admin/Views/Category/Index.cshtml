@model IEnumerable<WebMVC.Models.Category.CategorySummaryViewModel>

@{
    ViewData["Title"] = "Category List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Categories</h1>
        <p class="text-muted mb-0">Total Categories: <strong>@Model.Count()</strong></p>
    </div>

    <div class="mb-3">
        <div class="d-flex gap-2">
            <a asp-area="Admin" asp-action="Create" class="btn btn-success btn-sm">+ Create New</a>
            <a asp-area="Admin" asp-action="Merge" class="btn btn-primary btn-sm">Merge Categories</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Category ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Primary Products</th>
                    <th scope="col">Secondary Products</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryId</td>
                        <td>@item.Name</td>
                        <td>@item.PrimaryProductCount</td>
                        <td>@item.SecondaryProductCount</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-area="Admin" asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm text-white">Details</a>
                                <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table {
        font-size: 0.9rem;
        vertical-align: middle;
    }

        .table thead {
            font-size: 1rem;
        }

    .btn-group .btn {
        margin-right: 4px;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }

    .table td, .table th {
        vertical-align: middle;
    }

    .text-muted {
        font-size: 0.9rem;
    }

    .btn {
        margin: 0 2px;
    }
</style>
