@model IEnumerable<WebMVC.Models.Category.CategorySummaryViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h1 class="mb-4">Categories</h1>
            <p class="text-muted">Total Categories: <strong>@Model.Count()</strong></p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col d-flex gap-2">
            <a asp-area="Admin" asp-action="Create" class="btn btn-success">Create New</a>
            <a asp-area="Admin" asp-action="Merge" class="btn btn-primary">Merge Categories into new</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CategoryId)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.ProductCount)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductCount)</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-area="Admin" asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm">Details</a>
                            <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
